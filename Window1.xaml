<Window x:Class="ColourAtlas.ImageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColourAtlas"
        mc:Ignorable="d"
        Title="Palette" Height="450" Width="800">
    <Grid>
        <Button Background="#FF53E034" x:Name="imageSave" Grid.Column="0" Grid.Row="0" FontWeight="Bold"   FontSize="15" Content="SAVE IMAGE" Foreground="#FF2D4CD6" Margin="27,10,657,3" Click="imageSave_Click"/>

        <ScrollViewer HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="auto" Grid.Row="1" CanContentScroll="True" >
            <Border BorderThickness="2" BorderBrush="Black" ClipToBounds="False">
                <Canvas x:Name="imageCanvas" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"  >
                    <!--<Rectangle x:Name="imageRectange" Stretch="UniformToFill" Height="10" Width="10" Stroke="Black" />-->

                </Canvas>
            </Border>


        </ScrollViewer>







        <Grid.RowDefinitions>
            <RowDefinition Height="49"></RowDefinition>
            <RowDefinition/>


        </Grid.RowDefinitions>

    </Grid>
</Window>
